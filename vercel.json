{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",  // For frontend React app
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/build"  // Ensure this points to the correct build directory after React build
      }
    },
    {
      "src": "Backend/package.json",  // For backend Node.js app
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        // Routes all /api requests to the backend
      "dest": "Backend/app.js"   // Points to your main backend entry file (app.js)
    },
    {
      "src": "/(.*)",            // Routes all other requests to the frontend (React app)
      "dest": "Frontend/build/index.html"  // Serve the React app
    }
  ]
}
