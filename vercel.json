{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/build"  // Points to the build folder where static files are located
      }
    },
    {
      "src": "Backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        // Routes API calls to the backend
      "dest": "Backend/app.js"
    },
    {
      "src": "/(.*)",            // Routes all other requests to the frontend
      "dest": "Frontend/build/index.html"  // This serves the React app from the build folder
    }
  ]
}
